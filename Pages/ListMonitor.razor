@using System_ZiMZEwGD_Blazor.Data;
@page "/listMonitor";
@inject CustomHttpClient Http  
@inject AppSettingsService AppSettingsService 

<AuthorizeView>
<NotAuthorized>
<h2>Należy zalogować się</h2> 
</NotAuthorized>

<Authorized>
<h2>Monitor Details</h2>  
<p>  
    <a href="/addmonitor">Create New Monitor</a>  
</p>  
@if (Monitor == null)  
{  
    <img src="./css/basicloader.gif" />  
}  
else  
{  
    <table class='table'>  
        <thead>  
            <tr>  
                <th>Name</th>  
                <th>Description</th>  
                <th>IP</th>  
                <th>Port</th>  
                <th>Password</th>  
            </tr>  
        </thead>  
        <tbody>  
            @foreach (var employee in Monitor)  
            {  
                <tr>  
                    <td>@employee.Name</td>  
                    <td>@employee.Description</td>   
                    <td>@employee.IP</td>   
                    <td>@employee.Port</td>   
                    <td>@employee.Password</td>   
                </tr>  
  
            }  
        </tbody>  
    </table>  
}
</Authorized>
</AuthorizeView>
  
@code {  
    Monitor[] Monitor;  
    string baseUrl;  
  
    protected override async Task OnInitializedAsync()  
    {  
        baseUrl = AppSettingsService.GetBaseUrl();  
        Monitor = await Http.GetJsonAsync<Monitor[]>(baseUrl + "/api/monitor/get");  
    }  
}     
